{
  "hosting": [
    {
      "target": "host",
      "public": "apps/host/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "v1",
      "public": "apps/v1/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://portfolio-kbmin-host.web.app"
            },
            {
              "key": "Access-Control-Allow-Methods",
              "value": "GET,PUT,POST,DELETE,OPTIONS"
            },
            {
              "key": "Access-Control-Allow-Headers",
              "value": "Content-Type, Authorization"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "https://portfolio-kbmin-host.web.app/v1",
          "type": 302
        }
      ]
    },
    {
      "target": "v2",
      "public": "apps/v2/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://portfolio-kbmin-host.web.app"
            },
            {
              "key": "Access-Control-Allow-Methods",
              "value": "GET,PUT,POST,DELETE,OPTIONS"
            },
            {
              "key": "Access-Control-Allow-Headers",
              "value": "Content-Type, Authorization"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "https://portfolio-kbmin-host.web.app/v2",
          "type": 302
        }
      ]
    },
    {
      "target": "v3",
      "public": "apps/v3/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://portfolio-kbmin-host.web.app"
            },
            {
              "key": "Access-Control-Allow-Methods",
              "value": "GET,PUT,POST,DELETE,OPTIONS"
            },
            {
              "key": "Access-Control-Allow-Headers",
              "value": "Content-Type, Authorization"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "https://portfolio-kbmin-host.web.app/v3",
          "type": 302
        }
      ]
    }
  ]
}
