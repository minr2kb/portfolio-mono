{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    "types": ["node"], // node 타입 정의 추가
    // "lib": ["es2020", "DOM"],
    // "module": "ESNext",
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "composite": true,
    "incremental": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
