{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    "types": ["node"],
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "composite": true,
    "incremental": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
